<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.AnorBank.AppWidget.Container"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:background="@drawable/ic_bg"
    android:theme="@style/Theme.AnorBank.AppWidgetContainer">
    
    
    
    <ImageView

        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_gravity="top|center"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/ic_anor_title"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center">

        <ImageView
            android:id="@+id/img_tg"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_anor_tg"
            android:tint="@color/white"/>

        <ImageView
            android:id="@+id/img_call"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_anor_call"
            android:tint="@color/white"/>

        <ImageView
            android:id="@+id/img_web"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_anor_web"
            android:tint="@color/white"/>


    </LinearLayout>

